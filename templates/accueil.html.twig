{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Accueil{% endblock %}

{% block body %}
    <h1>Accueil</h1>
    <br>
    <div class="jumbotron">
        <h1 class="display-4">Bienvenue !</h1>
        <p class="lead">Voici le site de l'ENI proposant des covoiturages !</p>
        <hr class="my-4">
        <p>Participes ou organise des covoiturages, c'est économique et bon pour la planète !</p>
        <p class="lead">
            <a class=" btn-page btn" href="{{ path('app_login') }}" role="button" id="btn-page">Connexion</a>
        </p>
    </div>

    {{ form_start(formSearch) }}
    <div class="container">
        <div>
            {{ form_row(formSearch.agence) }}
        </div>
        <div class="row">
            {{ form_label(formSearch.dateDebut) }}
            {{ form_widget(formSearch.dateDebut) }}
        </div>
        <div class="row">
            {{ form_label(formSearch.dateFin) }}
            {{ form_widget(formSearch.dateFin) }}
        </div>
        <div>
            {{ form_row(formSearch.submit) }}
        </div>
    </div>

    {{ form_end(formSearch) }}


{% endblock %}